---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import Layout from "./Layout.astro";
import "../styles/blog.css";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<Layout title={title} description={description}>
    <!-- Hero Section with image and title -->
    <div class="bg-gradient-to-br from-gray-50 to-white py-8">
        <div class="max-w-4xl mx-auto px-6">
            {
                heroImage && (
                    <div class="mb-8">
                        <Image
                            src={heroImage}
                            alt={title}
                            width={1200}
                            height={600}
                            class="w-full h-64 md:h-96 object-cover rounded-2xl shadow-lg"
                        />
                    </div>
                )
            }

            <!-- Title and Meta -->
            <div class="text-center mb-8">
                <h1
                    class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 leading-tight"
                >
                    {title}
                </h1>

                <div
                    class="flex flex-col sm:flex-row items-center justify-center gap-4 text-gray-600"
                >
                    <div class="flex items-center">
                        <svg
                            class="w-5 h-5 mr-2"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                        >
                            <path
                                fill-rule="evenodd"
                                d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                                clip-rule="evenodd"></path>
                        </svg>
                        <FormattedDate date={pubDate} />
                    </div>

                    {
                        updatedDate && (
                            <div class="flex items-center">
                                <svg
                                    class="w-5 h-5 mr-2"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z"
                                        clip-rule="evenodd"
                                    />
                                </svg>
                                <span class="text-sm">
                                    Updated:{" "}
                                    <FormattedDate date={updatedDate} />
                                </span>
                            </div>
                        )
                    }
                </div>

                {
                    description && (
                        <p class="text-xl text-gray-600 mt-6 max-w-3xl mx-auto leading-relaxed">
                            {description}
                        </p>
                    )
                }
            </div>
        </div>
    </div>

    <!-- Blog Content using blog.css main container -->
    <main class="prose">
        <slot />
    </main>

    <!-- Article Footer -->
    <div class="bg-gradient-to-br from-gray-50 to-white py-16">
        <div class="max-w-4xl mx-auto px-6">
            <div
                class="bg-gradient-to-r from-blue-50 to-purple-50 rounded-2xl p-8"
            >
                <div class="text-center">
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">
                        Join Our Tech Community!
                    </h3>
                    <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
                        Want to stay updated with the latest tech insights,
                        workshops, and community events? Join GDGoC Maasai Mara
                        University and be part of our growing developer
                        ecosystem.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a
                            href="/community"
                            class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-xl hover:shadow-lg transform hover:scale-105 transition-all duration-200"
                        >
                            <svg
                                class="w-5 h-5 mr-2"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"
                                ></path>
                            </svg>
                            Join Our Communities
                        </a>
                        <a
                            href="/blog"
                            class="inline-flex items-center px-6 py-3 bg-white text-gray-700 font-semibold rounded-xl border-2 border-gray-200 hover:border-gray-300 hover:shadow-md transition-all duration-200"
                        >
                            <svg
                                class="w-5 h-5 mr-2"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z"
                                    clip-rule="evenodd"></path>
                            </svg>
                            More Articles
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>
