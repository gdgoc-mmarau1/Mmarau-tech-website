---
import { Image } from "astro:assets";
import schoolLogo from "../assets/Images/school-logo.jpg";
import gdscLogo from "../assets/Images/Gdsclg.jpg";

import teamLeadImg from "../assets/Images/Team Lead.jpg";
import assistantTeamLeadImg from "../assets/Images/Assistant Team Lead.jpg";
import generalSecretaryImg from "../assets/Images/General Secretary.jpg";
import treasurerImg from "../assets/Images/Treasurer.jpg";



const leaders = [
  { name: "Michael Simiyu", role: "Team Lead", img: teamLeadImg },
  {
    name: "Derrick Ngari",
    role: "Assistant Team Lead",
    img: assistantTeamLeadImg,
  },
  {
    name: "Lilian Njeri",
    role: "General Secretary",
    img: generalSecretaryImg,
  },
  { name: "Peter Kimani", role: "Treasurer", img: treasurerImg },
];
---

<div class="bg-gray-100">
  <section class="max-w-7xl mx-auto px-6 py-10">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">
      What is
      <span
        class="ml-2 font-primary text-white font-extrabold text-2xl cursor-pointer"
      >
        <span style="color: var(--ggle-blue)">G</span>
        <span style="color: var(--ggle-green)">D</span>
        <span style="color: var(--ggle-red-500)">G</span>
        <span style="color: var(--ggle-grey)">o</span>
        <span style="color: var(--ggle-yellow-500)">C</span>
      </span>
      ?
    </h2>
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="w-full md:w-1/2 mb-6 md:mb-0 relative">
        <Image
          src={schoolLogo}
          alt="School Logo"
          width={384}
          height={272}
          class="rounded-lg"
        />
        <Image
          src={gdscLogo}
          alt="GDSC Logo"
          width={384}
          height={272}
          class="absolute inset-0 opacity-65"
        />
      </div>
      <div class="w-full md:w-1/2">
        <p class="text-gray-700 text-lg leading-relaxed">
          Google Developer Groups on Campus (GDGoC) at Maasai Mara University is
          a vibrant community for students passionate about technology and
          innovation. Whether you are an aspiring developer, designer, or tech
          enthusiast, GDGoC offers a unique platform to:
        </p>
        <ul class="list-disc pl-6 text-gray-700">
          <li>Gain hands-on experience with cutting-edge technologies.</li>
          <li>
            Collaborate on impactful projects that solve real-world problems.
          </li>
          <li>Network with like-minded peers and industry professionals.</li>
          <li>Develop essential skills to advance your tech career.</li>
          <li>Contribute to building solutions for local communities.</li>
        </ul>
      </div>
    </div>

    <!-- Mission and Vision -->
    <div class="mt-10 grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-white shadow-md rounded-lg p-6">
        <h3 class="text-xl font-semibold text-gray-800 mb-4">
          Mission Statement
        </h3>
        <p class="text-gray-700 leading-relaxed">
          To empower students with cutting-edge technological skills, foster
          innovation, and build a vibrant community of tech enthusiasts through
          collaborative learning, hands-on projects, and industry exposure.
        </p>
      </div>
      <div class="bg-white shadow-md rounded-lg p-6">
        <h3 class="text-xl font-semibold text-gray-800 mb-4">
          Vision Statement
        </h3>
        <p class="text-gray-700 leading-relaxed">
          To be a leading university tech community that nurtures talent, drives
          technological advancements, and inspires the next generation of
          innovators and leaders.
        </p>
      </div>
    </div>
  </section>



  <!-- Leaders Section -->
  <section class="max-w-7xl mx-auto px-6 py-10">
    <h3 class="text-xl font-semibold text-center text-gray-800 mb-6">
      Club Leaders
    </h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {
        leaders.map((leader, index) => (
          <div class="text-center">
            <Image
              src={leader.img}
              alt={leader.name}
              width={96}
              height={96}
              class="rounded-full mx-auto mb-2"
            />
            <h4 class="font-semibold text-gray-800">{leader.name}</h4>
            <p class="text-sm text-gray-600">{leader.role}</p>
          </div>
        ))
      }
    </div>
  </section>
</div>
