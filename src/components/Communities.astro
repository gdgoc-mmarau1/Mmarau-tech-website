---
import { Image } from "astro:assets";
import communityMainGroup from "../assets/Images/Community Main group.jpg";
import networkingImg from "../assets/Images/networking.jpg";
import webDevImg from "../assets/Images/web-dev.jpg";
import uiuxImg from "../assets/Images/uiux.jpg";
import pythonDataImg from "../assets/Images/python-data.jpg";

const communities = [
  {
    name: "Community Main Group",
    description: "Connect with fellow tech enthusiasts and stay updated with all GDGoC activities",
    img: communityMainGroup,
    link: "https://chat.whatsapp.com/EkdjwNPuJTq9bAI3LgQohy",
    color: "from-blue-500 to-indigo-600",
    iconBg: "bg-blue-100",
  },
  {
    name: "Networking & Cybersecurity",
    description: "Master network security, ethical hacking, and cybersecurity fundamentals",
    img: networkingImg,
    link: "https://chat.whatsapp.com/IoMvBAQkl1gEwLD485ZGv9",
    color: "from-red-500 to-pink-600",
    iconBg: "bg-red-100",
  },
  {
    name: "Web Development",
    description: "Build modern web applications using cutting-edge frameworks and tools",
    img: webDevImg,
    link: "https://chat.whatsapp.com/B5jWJEyuYLMEcxjpdF7FBm",
    color: "from-green-500 to-emerald-600",
    iconBg: "bg-green-100",
  },
  {
    name: "UI/UX Design",
    description: "Create beautiful, user-centered designs and enhance user experiences",
    img: uiuxImg,
    link: "https://chat.whatsapp.com/EazND8WgmMeGilGHBeFRtd",
    color: "from-purple-500 to-violet-600",
    iconBg: "bg-purple-100",
  },
  {
    name: "Python for Data Science",
    description: "Analyze data, build ML models, and unlock insights with Python",
    img: pythonDataImg,
    link: "https://chat.whatsapp.com/GwfiySFhLYl2RoS4pMy996",
    color: "from-yellow-500 to-orange-600",
    iconBg: "bg-yellow-100",
  },
];
---

<section class="py-16 bg-gradient-to-br from-gray-50 to-white">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Join Our <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">Communities</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Connect with like-minded peers, learn from experts, and grow your skills in specialized tech domains
      </p>
      <div class="w-24 h-1 bg-gradient-to-r from-blue-500 to-purple-500 mx-auto mt-6 rounded-full"></div>
    </div>

    <!-- Communities Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {communities.map((community, index) => (
        <div class="group relative overflow-hidden bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <!-- Gradient Background -->
          <div class={`absolute inset-0 bg-gradient-to-br ${community.color} opacity-0 group-hover:opacity-5 transition-opacity duration-300`}></div>
          
          <!-- Card Content -->
          <div class="relative p-8">
            <!-- Icon -->
            <div class={`w-20 h-20 ${community.iconBg} rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300`}>
              <Image
                src={community.img}
                alt={community.name}
                width={48}
                height={48}
                class="rounded-xl"
              />
            </div>

            <!-- Content -->
            <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-gray-700 transition-colors">
              {community.name}
            </h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-6">
              {community.description}
            </p>

            <!-- Join Button -->
            <a
              href={community.link}
              target="_blank"
              rel="noopener noreferrer"
              class={`inline-flex items-center justify-center w-full px-6 py-3 bg-gradient-to-r ${community.color} text-white font-semibold rounded-xl hover:shadow-lg transform hover:scale-105 transition-all duration-200`}
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"/>
              </svg>
              Join Community
            </a>
          </div>

          <!-- Decorative Elements -->
          <div class="absolute top-4 right-4 w-8 h-8 bg-gradient-to-br from-white/20 to-white/5 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="absolute bottom-4 left-4 w-12 h-12 bg-gradient-to-br from-white/10 to-white/5 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300 delay-100"></div>
        </div>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="text-center mt-16">
      <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-2xl p-8 text-white">
        <h3 class="text-2xl font-bold mb-4">Can't decide which community to join?</h3>
        <p class="text-blue-100 mb-6 max-w-2xl mx-auto">
          Start with our main community group to get familiar with everyone, then explore specialized communities based on your interests!
        </p>
        <a
          href="https://chat.whatsapp.com/EkdjwNPuJTq9bAI3LgQohy"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-8 py-3 bg-white text-blue-600 font-semibold rounded-xl hover:bg-gray-100 transition-colors duration-200"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
          </svg>
          Join Main Community
        </a>
      </div>
    </div>
  </div>
</section>